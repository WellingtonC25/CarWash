@model CarWah.Models.Vehiculo

@{
    ViewBag.Title = "Delete";
}
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Elite/css/login.css" rel="stylesheet" />
<link href="~/Content/Elite/css/main.css" rel="stylesheet" />
<link href="~/Content/Elite/css/util.css" rel="stylesheet" />

<h2>Esta seguro de eliminar este articulo?</h2>

<br />
<div class="login">
    <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
        <div>
            <h4><i class="fa fa-car"></i>  Borrar Vehiculo</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Placa)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Placa)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Marca)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Marca.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Modelo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Modelo.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TipoVehiculo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TipoVehiculo.Descripcion)
                </dd>

            </dl>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Borrar" class="btn btn-danger" /> |
                @Html.ActionLink("Ir a la lista", "Index")
            </div>
        }
    </div>
</div>